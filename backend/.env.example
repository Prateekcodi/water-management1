# Smart Tank Backend Environment Variables

# Database Configuration
DATABASE_URL=sqlite:///./smart_tank.db
# For PostgreSQL: postgresql://user:password@localhost/smart_tank
# For MySQL: mysql://user:password@localhost/smart_tank

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USER=
MQTT_PASSWORD=

# Notification Settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# API Security
API_SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=smart_tank.log

# Prediction Settings
PREDICTION_DAYS=7
LEAK_THRESHOLD_PERCENT=1.0
OVERFLOW_THRESHOLD_PERCENT=95.0

# Tank Configuration (defaults)
DEFAULT_TANK_HEIGHT_CM=150
DEFAULT_TANK_DIAMETER_CM=100
DEFAULT_TANK_CAPACITY_LITERS=1178